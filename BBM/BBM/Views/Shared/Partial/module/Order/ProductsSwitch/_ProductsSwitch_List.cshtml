<script src=@Url.Content("~/Scripts/module/Order/m.Order.js")></script>
<script src=@Url.Content("~/Scripts/module/Order/ProductsSwitch/mv.ProductsSwitch_List.js")></script>
<script>
    var productsSwitchList = new Order.mvProductsSwitchList();
    $(document).ready(function () {
        productsSwitchList.Start();
    });
</script>
<div id="ProdcutsSwitchListViewId" class="row-fluid">
    <div class="span12">
        <div class="right">
            <button class="btn btn-success" onclick="CommonUtils.addTabDynamic('Tạo phiếu điều chỉnh', CommonUtils.url('/ProductsSwitch/RenderViewCreate'), '#contentX')">Tạo phiếu điều chỉnh</button>
            <button class="btn btn-primary" data-bind="click: function() {  productsSwitchList.Start() }"><i class="icon-refresh"></i></button>
        </div>
        <div class="row-fluid">
            <h3 class="header smaller lighter">Danh sách phiếu nhập</h3>
            <div class="table-header">
                Phiếu nhập
            </div>
            <div class="row-fluid">
                <div class="span11 m-10-px">
                    <!--ko template: {name: 'Filter_Search', data: FilterOrder } --><!--/ko-->
                </div>
            </div>
            <!--ko template: {name: 'dataTables', data:productsSwitchList.TmpTable } --><!--/ko-->
        </div>
    </div>
</div>
<script id="table_ProdcutsSwitch" type="text/html">
    <thead>
        <tr>
            <th class="sorting" data-bind="click: function(){ Sortby('Id'); SortbyDesc(SortbyDesc()?false:true)}">Mã phiếu</th>
            <th class="sorting" data-bind="click: function(){ Sortby('DateCreate'),SortbyDesc(SortbyDesc()?false:true)}">Ngày lập</th>
            <th class="sorting" data-bind="click: function(){ Sortby('Note'),SortbyDesc(SortbyDesc()?false:true)}">Lý do</th>
        </tr>
    </thead>
    <tbody>
        <!--ko foreach: listData() -->
        <tr data-bind="click: $parents[1].GetDetail" class="cursor-pointer">
            <td>
                <span data-bind="text: Id"></span>
            </td>
            <td>
                <span data-bind="datelong: DateCreate"></span>
            </td>
            <td>
                <span data-bind="text: Note"></span>
            </td>
         </tr>
        <!--ko if: IsViewDetail-->
        <tr>
            <td colspan="7" class="p-30px">
                <div class="span12">
                    <div>
                        <span class="span6 text-right">Phiếu : </span>
                        <span class="span6 text-left" data-bind="text: Id"></span>
                    </div>
                    <div>
                        <span class="span6 text-right">Người lập : </span>
                        <span class="span6 text-left" data-bind="text: EmployeeNameCreate"></span>
                    </div>

                    <div>
                        <span class="span6 text-right">Ngày lập phiếu : </span>
                        <span class="span6 text-left" data-bind="datelong: DateCreate"></span>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover dataTable m-t-5">
                    <thead>
                        <tr>
                            <td>Mã hàng hóa</td>
                            <td>Tên hàng</td>
                            <td>Số lượng</td>
                        </tr>
                    </thead>
                    <tbody>
                        <!--ko foreach: $data.Detail-->
                        <tr>
                            <td>
                                <span data-bind="text: Product.masp"></span>
                            </td>
                            <td>
                                <span data-bind="text: Product.tensp"></span>
                            </td>
                            <td>
                                <span data-bind="text:  Total"></span>
                            </td>
                        </tr>
                        <!--/ko-->
                     </tbody>
                </table>
            </td>
        </tr>
        <!--/ko-->
        <!--/ko-->
    </tbody>
</script>
